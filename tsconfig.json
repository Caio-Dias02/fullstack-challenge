{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@fullstack-challenge/types": ["packages/types"],
      "@fullstack-challenge/types/*": ["packages/types/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}

